
@{
    Layout = null;
}

@model newsportal.Models.News

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/style.css" rel="stylesheet" />
    <title>Admin Detail</title>
</head>
<body>
    <div class="detailed-main-container">
        <div class="detailed-center">
            <div class="detailed-post-date">
                <p>@Model.PostDate</p>
                <p>@Model.PostTime</p>
                <p>
                    <i>Views: </i>
                    <span>@Model.VisitedAmount</span>
                </p>
                <p>
                    <i>Likes: </i>
                    <span>@Model.LikeAmount</span>
                </p>
                <p>
                    <i>DisLikes: </i>
                    <span>@Model.DislikeAmount</span>
                </p>
            </div>
            <div class="detailed-image">
                <img src="~/images/PostsGallery/@Model.FileName" alt="Image Here!">
            </div>
            <div class="detailed-description">
                <p>@Model.Title</p>
            </div>
        </div>
    </div>
</body>
</html>
